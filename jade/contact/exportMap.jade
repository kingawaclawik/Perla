mixin generateRwdImage(imageSrc, imageType, imageAlt)
  img.visible-lg-block(src='assets/img/'+imageSrc+'-lg.'+imageType, alt=imageAlt, width="100%")
  img.visible-md-block(src='assets/img/'+imageSrc+'-md.'+imageType, alt=imageAlt, width="100%")
  img.visible-sm-block(src='assets/img/'+imageSrc+'-sm.'+imageType, alt=imageAlt, width="100%")
  img.visible-xs-block(src='assets/img/'+imageSrc+'-xs.'+imageType, alt=imageAlt, width="100%")

